 {{#each news}}
<div class="article" data-article_id={{this._id}}>
    <br>
    <a href={{this.url}}>
        <img src={{this.pic}} style="float:left"> {{this.headline}}
    </a>
    {{#if this.saved}}
    <button class="articleSaveBtn" data-saved={{this.saved}}>-</button>
    {{else}}
    <button class="articleSaveBtn" data-saved={{this.saved}}>+</button>
    {{/if}}

    <p>{{this.summary}}</p>
    <button class="commentsBtn" data-article_id={{this._id}}>Comments</button>
    <br>
    <br>
</div>
{{/each}}